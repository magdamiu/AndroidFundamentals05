<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/block_size_1"
        android:layout_margin="@dimen/small_size"
        android:background="@color/violet"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="@dimen/block_width_1"
        android:layout_height="@dimen/block_size_2"
        android:layout_gravity="center"
        android:background="@color/blue" />

    <TextView
        android:layout_width="@dimen/block_width_2"
        android:layout_height="@dimen/block_size_3"
        android:layout_gravity="center"
        android:background="@color/yellow"
        android:marginRight="@dimen/small_size" />


</FrameLayout>

