<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_image"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:src="@drawable/poster_sparkling"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/star_image"
        android:layout_width="@dimen/star_width"
        android:layout_height="@dimen/star_height"
        android:layout_marginEnd="@dimen/small_margin"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/happy_holidays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimension"
        android:layout_marginTop="@dimen/small_dimension"
        android:text="@string/happy_holidays"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_font_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimension"
        android:layout_marginTop="@dimen/small_dimension"
        android:text="@string/from_magda"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/happy_holidays" />

    <TextView
        android:id="@+id/wish_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimension"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/wish_1_text"
        app:layout_constraintStart_toStartOf="@+id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/avatar_image" />

    <TextView
        android:id="@+id/wish_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimension"
        android:text="@string/wish_2_text"
        app:layout_constraintStart_toStartOf="@+id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/wish_1" />

    <TextView
        android:id="@+id/wish_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimension"
        android:text="@string/wish_3_text"
        app:layout_constraintStart_toStartOf="@+id/avatar_image"
        app:layout_constraintTop_toBottomOf="@+id/wish_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wish_3">

        <Button
            android:id="@+id/button_let_it_snow"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_space"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_spacing"
            android:layout_weight="1"
            android:background="@color/pink"
            android:paddingHorizontal="@dimen/medium_padding"
            android:text="@string/let_it_snow"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size" />

        <Button
            android:id="@+id/button_gingle_bells"
            android:layout_width="0dp"
            android:layout_height="@dimen/medium_space"
            android:layout_marginStart="@dimen/small_spacing"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_weight="1"
            android:background="@color/pink"
            android:paddingHorizontal="@dimen/medium_padding"
            android:text="@string/gingle_bells"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>