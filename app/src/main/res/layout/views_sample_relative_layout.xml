<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAccentColor"
        android:layout_width="@dimen/medium_space"
        android:layout_height="@dimen/medium_space"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/textViewPrimaryColor"
        android:layout_width="@dimen/medium_space"
        android:layout_height="@dimen/medium_space"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textViewDarkColor"
        android:layout_width="@dimen/medium_space"
        android:layout_height="@dimen/medium_space"
        android:layout_above="@id/textViewAccentColor"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>