<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/zero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/orange_text_view"
                    android:text="@string/this_is_an_orange_textview"
                    android:textColor="@color/orange_text_view_text_color"
                    android:textSize="@dimen/text_view_text_size"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green_text_view"
                    android:text="@string/this_is_an_green_textview"
                    android:textColor="@color/green_text_view_text_color"
                    android:textSize="@dimen/text_view_text_size"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_text_view"
                    android:text="@string/this_is_an_blue_textview"
                    android:textColor="@color/blue_text_view_text_color"
                    android:textSize="@dimen/text_view_text_size"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/small_layout_margin_size">


                <Button
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/first_button_color"
                    android:text="@string/this_is_a_button"
                    android:gravity="center"
                    android:textColor="@color/first_button_text_color"
                    android:textSize="@dimen/text_view_text_size" />

                <ImageView
                    android:id="@+id/ten"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/palette" />

                <Button
                    android:id="@+id/eleven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/second_button_color"
                    android:text="@string/this_is_a_green_button"
                    android:gravity="center"
                    android:textColor="@color/second_button_text_color"
                    android:textSize="@dimen/text_view_text_size"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/second_layout_color"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/twelve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="@dimen/small_tansition_Y"
                android:hint="@string/this_is_an_edittext"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/thirteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="@dimen/small_tansition_Y"
                android:hint="@string/this_in_a_new_edittext"
                android:inputType="textCapWords" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="@color/third_layout_color"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:id="@+id/fourteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <CheckBox
                    android:id="@+id/fifteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/notify_me"
                    android:checked="false" />

                <Switch
                    android:id="@+id/sixteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/auto_backup"
                    android:checked="false" />

            </LinearLayout>

            <View
                android:id="@+id/seventeen"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <RatingBar
                android:id="@+id/eighteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/rating_bag_progress_color"
                android:numStars="5"
                android:rating="4"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:translationX="-40dp"
                android:stepSize="1" />

            <View
                android:id="@+id/nineteen"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <RadioGroup
                android:id="@+id/twenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/twentyone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="YES" />

                <RadioButton
                    android:id="@+id/twentytwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="NO" />

            </RadioGroup>



        </LinearLayout>







    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>